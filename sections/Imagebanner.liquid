<div class="image-banner">

  {% if section.settings.banner_image != blank %}
    {{ section.settings.banner_image | image_url: width: 1600 | image_tag }}
  {% endif %}

  <h1>{{ section.settings.banner_heading }}</h1>
  <p>{{ section.settings.banner_subheading }}</p>

  
     {%- content_for 'blocks' -%}



</div>

{% schema %}
{
  "name": "Image Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "banner_heading",
      "label": "Banner Heading"
    },
    {
      "type": "text",
      "id": "banner_subheading",
      "label": "Banner Subheading"
    }
  ],
  "blocks": [
    {
      "type": "@theme"
    },
    {
        "type": "_heading"
    },
    {
        "type": "button-block"
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}
<style>

    .image-banner {
  text-align: center;
  padding: 80px 20px;
  background: linear-gradient(180deg, #f8f8f8, #ffffff);
}

.image-banner img {
  max-width: 100%;
  height: auto;
  border-radius: 16px;
  margin-bottom: 30px;
}

.image-banner h1 {
  font-size: 42px;
  font-weight: 700;
  margin-bottom: 12px;
  color: #111;
}

.image-banner p {
  font-size: 18px;
  color: #555;
  margin-bottom: 30px;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}

.banner-buttons {
  display: flex;
  justify-content: center;
  gap: 16px;
  flex-wrap: wrap;
}

/* Button block */
.banner-button {
  display: inline-block;
  padding: 14px 28px;
  font-size: 16px;
  font-weight: 600;
  color: #fff;
  background-color: #111;
  border-radius: 999px;
  text-decoration: none;
  transition: all 0.3s ease;
}

.banner-button:hover {
  background-color: #333;
  transform: translateY(-2px);
}


</style>